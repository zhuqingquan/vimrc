    map <D-3> 3gt
    map <D-4> 4gt
    map <D-5> 5gt
    map <D-6> 6gt
    map <D-7> 7gt
    map <D-8> 8gt
    map <D-9> 9gt
    map <D-0> :tablast<CR>
endif

function! UpdateCtags()
        silent exec "!ctags -R --c++-kinds=+p --fields=+iaS --extras=+q --languages=c,c++ ."
endfunction

